-- Home-units configuration for ghcid multi-package support
-- See: https://github.com/srid/imako/tree/master/home-units

packages:
  ../packages/vira
  ../packages/htmx-lucid-extra
  ../packages/warp-tls-simple

-- Enable home units for faster compilation
home-units: vira htmx-lucid-extra warp-tls-simple

-- Common flags for all packages
allow-newer: all
test-show-details: direct

-- Optimization flags
package *
  documentation: False
  haddock-all: False